	<body>
            <h1>Now Playing: <%= name %> by <%= artist %></h1>
            <iframe src="https://open.spotify.com/embed/track/<%= uri %>" width="300" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
