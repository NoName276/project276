<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>tHe ClUb</title>
  <link href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <head>
    <meta charset="utf-8">
    <title>tHe ClUb</title>
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <script src="/scripts/socket.io.js"></script>
    <script>
      const roomName = "<%= roomName %>"
      const socket = io('/chat')
      socket.emit('join', roomName);
      socket.on('user-joined', user => {
        console.log("new user")
      })
      socket.on('newMessage', function (data) {
        console.log(`new message: ${data}`)
        document.getElementById('messageList').append(`<div class= "chatbox" >${data}</div>`);
      })
      function openForm(formToShow) {
        document.getElementById(formToShow).className = '';
      }
      document.querySelectorAll("p.error").forEach(ele => {
        ele.className += 'hide';
      })
      function sendMessage(e) {
        socket.emit('message', {
          message: document.getElementById('userMessage').value,
          room: roomName
        });
        console.log("sent");
        e.preventDefault();
      }
      function closeForm(formToHide) {
        document.getElementById(formToHide).className = 'hide';
      }
    </script>
  </head>


<body>
  <div id="user-container">
    <h1>ThE ClUb</h1>
    <p>Invite players to this room: <%= roomName %></p>
    <h2>Current players in this room:</h2>
    <% Object.keys(users).forEach(user => { %>
    <p><%= user %></p>
    <% }) %>
    <form class="form" class="hide">
  </div>
  <form>
    <button class="open-button" onclick="openForm();">Chat</button>
  </form>
  <div id="chatbox">

    <form id="message" id="form">
      <div class="user-container">
        <h1>Chatbox</h1>
        <label for="msg">Enter messages<textarea class="text"></textarea></label>
        <textarea placeholder="Type message.." name="msg" required></textarea>
        <button type="submit" class="button">Send</button>
        <button type="button" class="cancel" onclick="closeForm()">Close</button>
      </div>
  </div>
  </form>

  </div>
  </form>
</body>

</html>